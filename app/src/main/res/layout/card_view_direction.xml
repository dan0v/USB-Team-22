<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="@dimen/card_margin"
        android:elevation="3dp"
        card_view:cardCornerRadius="@dimen/card_navigation_radius">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/navigationDirectionImage"
                android:layout_width="@dimen/navigation_direction_image_width"
                android:layout_height="@dimen/navigation_direction_image_height"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="false"
                android:gravity="center"
                android:layout_marginTop="@dimen/navigation_direction_image_margin"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/navigationDistanceText"
                android:layout_width="@dimen/navigation_distance_text_width"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/navigationDirectionImage"
                android:gravity="center"
                android:padding="@dimen/navigation_distance_text_padding"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/navigation_distance_text" />

            <TextView
                android:id="@+id/navigationDirectionText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/navigationDistanceText"
                android:gravity="left"
                android:padding="@dimen/navigation_direction_text_padding"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/navigation_direction_text" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>