<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:orientation="vertical"
    android:background="@color/colorPrimary">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_weight="0.5"
        android:layout_height="0dp">

        <ImageView
            android:id="@+id/cafe_header_icon_view"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:tint="#ffffff"
            android:layout_above="@id/cafe_header_title_view"
            android:src="@drawable/cafe"/>

        <TextView
            android:id="@+id/cafe_header_title_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_marginTop="3dp"
            android:text="@string/cafeTitle"
            android:textColor="#ffffff"
            android:textAppearance="@style/TextAppearance.AppCompat.SearchResult.Title"/>

        <TextView
            android:id="@+id/cafe_header_detail_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cafe_header_title_view"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="0dp"
            android:text="Open Now"
            android:textColor="@color/colorOpen"
            android:textAppearance="@style/TextAppearance.AppCompat.SearchResult.Subtitle"/>
    </RelativeLayout>
</LinearLayout>