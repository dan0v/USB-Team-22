<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:padding="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/text_view_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="294dp"
            android:text="@string/titleTour"
            android:textColor="@color/colorBlue"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_view_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_title"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="304dp"
            android:text="@string/descTour"
            android:textColor="#000" />

        <ImageView
            android:id="@+id/image_view_icon"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="37dp"
            android:background="@drawable/tour"
            android:contentDescription="Tour icon" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_marginTop="102dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:padding="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/text_view_title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="294dp"
            android:text="@string/titleNav"
            android:textColor="@color/colorBlue"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_view_description2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_title2"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="274dp"
            android:text="@string/descNav"
            android:textColor="#000" />

        <ImageView
            android:id="@+id/image_view_icon2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="37dp"
            android:background="@drawable/navigation_inverted"
            android:contentDescription="Navigation icon" />

    </RelativeLayout>

    <View
        android:id="@+id/SplitLine_hor1"
        android:layout_width="match_parent"
        android:layout_height= "2dp"
        android:layout_below="@id/relativeLayout"
        android:background="@color/colorBlack" />

    <RelativeLayout
        android:id="@+id/dashboard_header"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/relativeLayout2"
        android:background="@color/colorPrimary"
        android:padding="8dp"
        android:paddingBottom="16dp">
        <TextView
            android:id="@+id/header_room_name"
            android:layout_height="30dp"
            android:layout_width="200dp"
            android:text="@string/roomName"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"
            android:textSize="20sp"
            />
        <TextView
            android:id="@+id/header_available"
            android:layout_height="30dp"
            android:layout_width="200dp"
            android:text="@string/available"
            android:gravity="center"
            android:layout_alignParentEnd="true"
            android:textStyle="bold"
            android:paddingRight="15dp"
            android:textColor="@color/colorWhite"
            android:textSize="20sp"
            />

        >
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/available_computers_view"
        android:layout_width="400dp"
        android:layout_height="200dp"
        android:layout_below="@id/dashboard_header"
        android:scrollbars="vertical"
        tools:listitem="@layout/card_view_available_computers"/>


</RelativeLayout>
