<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context=".activities.RoomActivity"
    android:layout_marginBottom="70dp">

    <ScrollView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:nestedScrollingEnabled="true"
        android:isScrollContainer="true"
        app:layout_constrainedHeight="true">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/dashboardButtons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/dashboardRoomListContainer"
                app:layout_constraintLeft_toLeftOf="parent">
                <android.support.v7.widget.CardView
                    android:id="@+id/tour_card_view"
                    card_view:cardCornerRadius="@dimen/card_navigation_radius"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/card_margin"
                    android:elevation="3dp"
                    android:clickable="true">
                    <RelativeLayout
                        android:id="@+id/dashboardShortcutSelectionViewTour"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp">
                        <TextView
                            android:id="@+id/dashboardShortcutTitleTextViewTour"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignWithParentIfMissing="true"
                            android:layout_marginLeft="12dp"
                            android:layout_toLeftOf="@id/dashboardShortcutImageViewTour"
                            android:text="@string/tourTitle"
                            android:textAppearance="@style/TextAppearance.AppCompat.SearchResult.Title"
                            android:textColor="@color/colorPrimary" />
                        <TextView
                            android:id="@+id/dashboardShortcutDetailTextViewTour"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignWithParentIfMissing="true"
                            android:layout_below="@id/dashboardShortcutTitleTextViewTour"
                            android:layout_marginLeft="12dp"
                            android:layout_toLeftOf="@id/dashboardShortcutImageViewTour"
                            android:text="@string/descTour"
                            android:textAppearance="@style/TextAppearance.AppCompat.SearchResult.Subtitle" />
                        <ImageView
                            android:id="@+id/dashboardShortcutImageViewTour"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:clickable="false"
                            android:scaleType="fitXY"
                            android:src="@drawable/tour"
                            android:tint="@color/colorPrimary" />
                    </RelativeLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:id="@+id/navigation_card_view"
                    card_view:cardCornerRadius="@dimen/card_navigation_radius"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/card_margin"
                    android:elevation="3dp"
                    android:clickable="true"
                    android:layout_below="@id/tour_card_view">
                    <RelativeLayout
                        android:id="@+id/dashboardShortcutSelectionViewNavigation"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp">
                        <TextView
                            android:id="@+id/dashboardShortcutTitleTextViewNavigation"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignWithParentIfMissing="true"
                            android:layout_marginLeft="12dp"
                            android:layout_toLeftOf="@id/dashboardShortcutImageViewNavigation"
                            android:text="@string/navigation"
                            android:textAppearance="@style/TextAppearance.AppCompat.SearchResult.Title"
                            android:textColor="@color/colorPrimary" />
                        <TextView
                            android:id="@+id/dashboardShortcutDetailTextViewNavigation"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignWithParentIfMissing="true"
                            android:layout_below="@id/dashboardShortcutTitleTextViewNavigation"
                            android:layout_marginLeft="12dp"
                            android:layout_toLeftOf="@id/dashboardShortcutImageViewNavigation"
                            android:text="@string/descNav"
                            android:textAppearance="@style/TextAppearance.AppCompat.SearchResult.Subtitle" />
                        <ImageView
                            android:id="@+id/dashboardShortcutImageViewNavigation"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:clickable="false"
                            android:scaleType="fitXY"
                            android:src="@drawable/navigation"
                            android:tint="@color/colorPrimary" />
                    </RelativeLayout>
                </android.support.v7.widget.CardView>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/dashboardRoomListContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/dashboardButtons"
                app:layout_constraintBottom_toTopOf="@id/dashboardOpenStatuses"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constrainedHeight="true"
                app:layout_constraintHeight_min="100dp"
                app:layout_constraintHeight_max="400dp">
                <RelativeLayout
                    android:id="@+id/dashboardHintBar"
                    android:background="@color/colorPrimary"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:layout_marginTop="5dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    app:layout_constraintLeft_toLeftOf="parent">
                    <TextView
                        android:id="@+id/dashboardRoomNameText"
                        android:paddingRight="20dp"
                        android:paddingLeft="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignWithParentIfMissing="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentRight="false"
                        android:gravity="left"
                        android:text="@string/roomName"
                        android:textAppearance="@style/TextAppearance.AppCompat.SearchResult.Title"
                        android:textColor="@color/colorWhite" />
                    <TextView
                        android:id="@+id/dashboardAvailableComputersText"
                        android:paddingRight="20dp"
                        android:paddingLeft="20dp"
                        android:layout_toRightOf="@id/dashboardRoomNameText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignWithParentIfMissing="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentLeft="false"
                        android:gravity="right"
                        android:text="@string/availableComputers"
                        android:textAppearance="@style/TextAppearance.AppCompat.SearchResult.Title"
                        android:textColor="@color/colorWhite"/>
                </RelativeLayout>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/dashboard_recycler_view"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/dashboardHintBar"
                    android:scrollbars="vertical"
                    android:isScrollContainer="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/dashboardOpenStatuses"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/dashboardRoomListContainer"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent">
                <RelativeLayout
                    android:id="@+id/dashboardCafeStatus"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_marginTop="5dp"
                    app:layout_constraintLeft_toLeftOf="parent">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginRight="60dp"
                        android:background="@drawable/dashboard_widgets">
                        <TextView
                            android:id="@+id/dashboardStatusTitleTextViewCafe"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/cafe"
                            android:textColor="@color/colorWhite"
                            android:layout_marginTop="12dp"
                            android:layout_marginBottom="12dp"
                            android:layout_marginLeft="15dp"
                            android:layout_toLeftOf="@id/dashboardStatusIndicatorViewCafe"
                            android:layout_alignParentLeft="true"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
                        <View
                            android:id="@+id/dashboardStatusIndicatorViewCafe"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_centerVertical="true"
                            android:background="@drawable/dashboard_circle"
                            android:layout_alignParentRight="true"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"/>
                    </RelativeLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/dashboardOutOfHoursStatus"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_below="@id/dashboardCafeStatus"
                    app:layout_constraintLeft_toLeftOf="parent">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginRight="60dp"
                        android:background="@drawable/dashboard_widgets">
                        <TextView
                            android:id="@+id/dashboardStatusTitleTextViewOutOfHours"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/outOfHours"
                            android:textColor="@color/colorWhite"
                            android:layout_marginTop="12dp"
                            android:layout_marginBottom="12dp"
                            android:layout_marginLeft="15dp"
                            android:layout_toLeftOf="@id/dashboardStatusIndicatorViewOutOfHours"
                            android:layout_alignParentLeft="true"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
                        <View
                            android:id="@+id/dashboardStatusIndicatorViewOutOfHours"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_centerVertical="true"
                            android:background="@drawable/dashboard_circle"
                            android:layout_alignParentRight="true"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"/>
                    </RelativeLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/dashboardBuildingOpenStatus"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_below="@id/dashboardOutOfHoursStatus">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginRight="60dp"
                        android:background="@drawable/dashboard_widgets">
                        <TextView
                            android:id="@+id/dashboardStatusTitleTextViewBuildingOpen"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/building"
                            android:textColor="@color/colorWhite"
                            android:layout_marginTop="12dp"
                            android:layout_marginBottom="12dp"
                            android:layout_marginLeft="15dp"
                            android:layout_toLeftOf="@id/dashboardStatusIndicatorViewBuildingOpen"
                            android:layout_alignParentLeft="true"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
                        <View
                            android:id="@+id/dashboardStatusIndicatorViewBuildingOpen"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_centerVertical="true"
                            android:background="@drawable/dashboard_circle"
                            android:layout_alignParentRight="true"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"/>
                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>
        </android.support.constraint.ConstraintLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>